-var title = 'Alcodemist'
html(lang="en")

  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="shortcut icon", href="/img/icon-svg/code.svg", type="image/x-icon")
    block style
      link(rel="stylesheet", href="/css/character-sheet.css")
      link(rel="stylesheet", href="/css/main-base.css")
    title= title

  body
    #background

    block landing

    include includes/header.pug
    
    main
      section.main-content
        block content
  
    include includes/footer.pug

    block scripts
      if(envProduction)
        script(src="https://unpkg.com/react@17/umd/react.production.min.js" crossorigin)
        script(src="https://unpkg.com/react-dom@17/umd/react-dom.production.min.js" crossorigin)
      else
        script(src="https://unpkg.com/react@17/umd/react.development.js" crossorigin)
        script(src="https://unpkg.com/react-dom@17/umd/react-dom.development.js" crossorigin)
      script(src="/scripts/main-base.js" type='module')