extends ../main-base.pug

block append style
    link(rel="stylesheet", href="//cdn.quilljs.com/1.3.6/quill.snow.css")
    link(rel="stylesheet", href="//cdn.quilljs.com/1.3.6/quill.bubble.css")
    link(rel="stylesheet", href="//cdn.quilljs.com/1.3.6/quill.core.css")
    link(rel="stylesheet", href="/css/article-comp.css")

block content
    a(href="/blog")
        h1(class="shadow-block reactive-block")= title + ' Blog'
    #compArea
    if(admin)
        .button-panle
            button.btn-lvl-one(id="saveBtn") Save

block append scripts
    script(src="//cdn.quilljs.com/1.3.6/quill.min.js")
    script(src="/scripts/quill-blog-editor.js" type='module')